<div class="page_frame">

<div class="list_frame">

    <p><%=@kid.name.capitalize() %> has saved: $<%=  '%.2f' % @transactions.sum(:amount).to_f %></p>
    <p><%=@kid.name.capitalize()%>'s savings goal: $<%=  '%.2f' % @kid.goal%></p>



    <table class="table table-striped table-bordered">
      <thead>
        <tr>
           <th>Date</th>
           <th>Type</th>
           <th>Description</th>
           <th>Amount</th>
        </tr>
      </thead>
      <tbody>
      <% @transactions.each() do |transaction| %>
      <tr>
         <td><%= transaction.date %></td>
         <td><%= transaction.transaction_type %></td>
         <td><%= transaction.description %></td>
         <td class="money"><%= '%.2f' % transaction.amount %></td>
      </tr>
        <% end %>
    </tbody>
    </table>
</div>


    <div class="form_div">
      <form id="form_id" action="/kids/<%=@kid.id%>" method="post">
        <p><select id="transaction_type" type="text" name="transaction_type">
          <option value="deposit">Deposit</option>
          <option value="withdrawal">Withdrawal</option>
          </select> Select transaction type </p>
        <label for="amount">Enter transaction amount: $</label>
        <input type="text" name="amount">
        <p><label for="description">Enter description:</label>
          <input type="text" name="description"></p>
        <p>
          <label for="date">Today's date:</label>
          <input type="date" name="date" value="<%= @current_date %>"></p>

        <button type="submit">Add transaction</button>
      </form>
    </div>
</div>
