<div class="row">
  <div class="col-lg-12 text-center">
    <h2 class="brand-name"><%=@kid.name.capitalize() %> has saved: $<%=  '%.2f' % @transactions.sum(:amount).to_f %>!</h2>
    <h3><%=@kid.name.capitalize()%>'s savings goal: $<%=  '%.2f' % @kid.goal%></h3>
  </div>
</div>


<div class="row">
  <div class="box">
    <div class="col-md-4">
    <h2 class="intro-text text-center">Add a transaction:</h2>
    <form id="form_id" action="/kids/<%=@kid.id%>" method="post">
      <p>Select transaction type <select id="transaction_type" type="text" name="transaction_type">
        <option value="deposit">Deposit</option>
        <option value="withdrawal">Withdrawal</option>
        </select> </p>
      <p><label for="amount">Transaction amount: $</label>
        <input type="text" name="amount"></p>
      <p><label for="description">Enter description:</label>
        <input type="text" name="description"></p>
      <p>
        <label for="date">Today's date:</label>
        <input type="date" name="date" value="<%= @current_date %>"></p>

      <button type="submit">Add transaction</button>
    </form>
    </div>



    <div class="col-md-8">
    <h2 class="intro-text text-center">Transaction History:</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
           <th>Date</th>
           <th>Type</th>
           <th>Description</th>
           <th>Amount</th>
        </tr>
      </thead>
      <tbody>
      <% @transactions.each() do |transaction| %>
      <tr>
         <td><%= transaction.date %></td>
         <td><%= transaction.transaction_type %></td>
         <td><%= transaction.description %></td>
         <td class="money"><%= '%.2f' % transaction.amount %></td>
      </tr>
        <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>
