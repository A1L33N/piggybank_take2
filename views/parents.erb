<div class="row">
<div class="box">
  <div class="col-md-4">
  <h2>Create your bank:</h2>
    <form id="formid" action="/parents" method="post">
      <input type="text" name="parent_name" placeholder="Enter your name">
      <input type="text" name="bank_name" placeholder="Name your bank">
      <button type="submit">Add Parent/Bank</button>
    </form>
  </div>

  <div class="col-md-8">
    <div class="bank-list">
      <h2>Bank List:</h2>
      <% if @parents.any?() %>
        <ul>
          <% @parents.each() do |parent| %>
            <li><a href="/parents/<%=parent.id%>"><%= parent.bank_name %></a></li>
          <% end %>
        </ul>
        <% else %>
          <p>
            No banks yet!
          </p>
        <% end %>
    </div>
  </div>

</div>
</div>
